# ⚠️ .env.example
# This is a template for environment variables used by Docker Compose.

# -----------------------
# Backend Configuration
# -----------------------

# Host port that maps to the Express server inside the container
API_PORT=5000

# Allowed origin for CORS
CLIENT_URL=http://localhost:3000

# JWT secret for signing tokens (used by API container)
JWT_SECRET=your_jwt_secret

# -----------------------
# Database Configuration
# -----------------------

# Host port that maps to PostgreSQL inside the container
DB_PORT=5432

# Postgres connection string (used by backend service)
DATABASE_URL=postgresql://postgres:password@db:5432/pizza-app

# Credentials and DB name used by the PostgreSQL container
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=pizza-app
